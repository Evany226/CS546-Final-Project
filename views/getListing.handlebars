
   <article class = 'listing'>
        <h1>{{listing.listingName}}</h1>

        <h2>{{listingFigureName}}</h2>
            <img class = 'listingFigure-image' alt='{{listingFigureName}}' src='{{offerImageUrl}}'> 
        <p class="user-info">Posted by  <a class = 'user-link' href='/getUser/{{this.userId}}'>{{username}}</a></p>
        <p clase="status-info">{{this.status}}</p>

        <section>
            <h3>Figure Info</h3>
            <dl>
                <dt class='description-condition'>Condition:</dt>
                <dd>{{this.condition}}</dd>
                <dt class='description-description'>Description:</dt>
                <dd>{{this.description}}</dd>
            </dl>
        </section>

        <section>
            <h4>Trading For:</h4>
                <table class="trading_table">
                  {{#each offeringFigure}}
                  <tr>
                      <th class='table-source'>{{this.figureName}}</th>
                      <th><img class = 'offeringFigure-image' alt='{{this.figureName}}' src='{{this.figureImageUrl}}'> </th>
                  </tr>
                  {{/each}}
                </table>
        </section>

        <section>
            <h4>Ratings and Comments:</h4>
                {{#each comment}}
                    <h5 class='comment-rating'>Rating: {{this.rating}}</h5>
                    <p class="comment-content">{{this.content}}</p>
                    <p class="comment-username">Post by <a class = 'user-link' href='/getUser/{{this.userId}}'>{{this.username}}</a></p>
                {{/each}}
        </section>

    </article>
