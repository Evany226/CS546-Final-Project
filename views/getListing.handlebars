<article class="listing-page">
  <div class="listing-section">
    <div class="image-wrapper">
      <img
        class="listingFigure-image"
        alt="{{listingFigureName}}"
        src="{{listingFigureImageUrl}}"
      />
    </div>
    <div class="lister-info">
      <h1 class="listing-title">{{listingName}}</h1>
      <h2 class="figure-name">Figure: {{listingFigureName}}</h2>
      <div class="user-wrapper">
        <p class="user-info">Posted by: </p>
        <a class="user-link" href="/profile/{{this.userId}}">{{username}}</a>
      </div>
      <p class="description-description">Description: {{this.description}}</p>
      <p class="description-condition">Condition: {{this.condition}}</p>
    </div>
    {{!-- <p class="status-info">{{this.status}}</p> --}}
  </div>

  <section class="offering-section">
    <h4>Trading For:</h4>
    <ul class="offering-table">
      {{#each offeringFigure}}
        <li class="offering-item">
          <p class="table-source">{{this.figureName}}</p>
          <div class="offering-image-wrapper">
            <img
              class="offering-image"
              alt="{{this.figureName}}"
              src="{{this.figureImageUrl}}"
            />
          </div>
        </li>
      {{/each}}
    </ul>
</section>

