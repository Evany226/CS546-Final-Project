  <section class="comment-section">
    <h4>Ratings and Comments:</h4>
    {{#each comment}}
      <h5 class="comment-rating">Rating: {{this.rating}}</h5>
      <p class="comment-content">{{this.content}}</p>
      <p class="comment-username">Post by
        <a
          class="user-link"
          href="/getUser/{{this.userId}}"
        >{{this.username}}</a></p>
    {{/each}}
  </section>

</article>